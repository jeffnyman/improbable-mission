{
  "name": "improbable-mission",
  "private": true,
  "type": "module",
  "version": "0.0.0",
  "license": "MIT",
  "author": {
    "name": "Jeff Nyman",
    "email": "jeffnyman@gmail.com",
    "url": "https://testerstories.com"
  },
  "description": "A faithful recreation of the 1984 puzzle-platformer Impossible Mission by Epyx.",
  "keywords": [
    "commodore 64",
    "c64",
    "retrogaming",
    "recreation",
    "platformer",
    "game",
    "impossible mission",
    "epyx",
    "typescript",
    "javascript"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jeffnyman/improbable-mission/"
  },
  "bugs": {
    "url": "https://github.com/jeffnyman/improbable-mission/issues"
  },
  "homepage": "https://jeffnyman.github.io/improbable-mission",
  "scripts": {
    "dev": "vite --host --open",
    "build": "tsc && vite build",
    "preview": "vite preview --host --open",
    "typecheck": "tsc --noEmit",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,js}": [
      "eslint --quiet --max-warnings=0 --fix --cache --cache-location .eslintcache"
    ],
    "**/*.{ts,js,md,json}": [
      "prettier --write --ignore-unknown"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.11"
  }
}
